<% content_for :page_title, @review.title %>

<div class="show-container">
  <h1>
    <%= @review.title %>
  </h1>
  <h2>
    <%= @review.restaurant %>
  </h2>

  <div class= "score">
    <%= @review.score %> /10
  </div>

<% if @review.ambience.present? %>
  <div class= "ambience">
    Ambience: <%= @review.ambience %>
  </div>
<% end %>

<% if @review.price.present? %>
  <div class= "price">
    Price: <%= @review.price %>
  </div>
<% end %>

<% if @review.cuisine.present? %>
  <div class= "cuisine">
    Cuisine: <%= @review.cuisine %>
  </div>
<% end %>

  <div class="body">
    <%= simple_format @review.body %>
  </div>

  <div class="actions">
    <%= link_to "Edit review", edit_review_path(@review) %>
    <%= link_to "Delete review", review_path(@review), method: :delete, data: { confirm: "Are you sure?" }  %>
  </div>
</div>
